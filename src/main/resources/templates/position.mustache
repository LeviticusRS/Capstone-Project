{{> header}}

<div class="account-pages"></div>
<div class="clearfix"></div>
<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="http://127.0.0.1">View Tables</a>
</nav>
<div class="wrapper-page">
    <div class="panel-heading">
        <h3 class="text-center">Database Management <strong class="text-custom">Project</strong></h3>
    </div>
    <div class="card-box">
        <div class="panel-heading">
            <h3 class="text-center">Position</h3>
        </div>
        <div class="panel-body">
            <form id="position" action="/api/position/new" method="POST" class='form-inline'>
                <div class="input-group">
                    Position Name:<br>
                    <input id="positionName" type="text" class="form-control">
                    <br>
                    <button id="submitPosition" type='submit' class="btn btn-secondary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        var actorsForm = $('#position');
        actorsForm.submit(function(event){
            var positionName = $('#positionName').val();
            $.post('/api/position/new', {positionName: positionName}, function(){
                alert("Successfully created.");
            });
            event.preventDefault();
        });
    });
</script>

{{> header}}

<div class="account-pages"></div>
<div class="clearfix"></div>
<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="http://127.0.0.1">View Tables</a>
</nav>
<div class="wrapper-page">
    <div class="panel-heading">
        <h3 class="text-center">Database Management <strong class="text-custom">Project</strong></h3>
    </div>
    <div class="card-box">
        <div class="panel-heading">
            <h3 class="text-center">Actors</h3>
        </div>
        <div class="panel-body">
            <form id="actors" action="/api/actor/new" method="POST" class='form-inline'>
                <div class="input-group">
                    Actor Name:<br>
                    <input id="actorName" type="text" class="form-control">
                    Actor DOB:<br>
                    <input id="actorDateOfBirth" type="date" class="form-control">
                    Actor Gender:<br>
                    <input id="actorGender" type="text" class="form-control">
                    <br>
                    <button id="submitActor" type='submit' class="btn btn-secondary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        var actorsForm = $('#actors');
        actorsForm.submit(function(event){
            var actorName = $('#actorName').val();
            var actorDateOfBirth = $('#actorDateOfBirth').val();
            var actorGender = $('#actorGender').val();
            $.post('/api/actor/new', {actorName: actorName, actorDateOfBirth: actorDateOfBirth, actorGender: actorGender}, function(){
                alert("Successfully created.");
            });
            event.preventDefault();
        });
    });
</script>
